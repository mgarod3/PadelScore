<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Vertical Layout -->

    <style name="PrincipalLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Intermediate" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="LayoutHorizontal" parent="Intermediate">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteBackground" parent="LayoutHorizontal">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LayoutScore" parent="WhiteBackground">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="android:paddingTop">@dimen/small_vertical_margin</item>
    </style>

    <style name="LayoutTeams" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViews" parent="Intermediate">
        <item name="android:gravity">center</item>

    </style>

    <style name="Titles" parent="TextViews">
        <item name="android:textSize">@dimen/text_titles</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TeamName" parent="Titles">
        <item name="android:padding">@dimen/horizontal_padding</item>
    </style>

    <style name="TeamScores" parent="TextViews">
        <item name="android:textSize">@dimen/text_team_scores</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

    <style name="AlertsTeam" parent="Intermedio2">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_alerts</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:paddingTop">@dimen/medium_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/medium_vertical_padding</item>
    </style>

    <style name="Intermedio2" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TeamButtons" parent="Intermedio2">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">@dimen/text_buttons</item>
        <item name="android:paddingTop">@dimen/small_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/small_vertical_margin</item>
    </style>

    <style name="NewButtons" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_buttons</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="HLayoutGameSet" parent="Intermediate">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LayoutsGameSet" parent="Intermedio2">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LayoutGame" parent="LayoutsGameSet">
        <item name="android:layout_marginRight">@dimen/small_horizontal_margin</item>
    </style>

    <style name="LayoutSet" parent="LayoutsGameSet">
        <item name="android:layout_marginLeft">@dimen/small_horizontal_margin</item>
    </style>

    <style name="GameSetScore" parent="Intermedio2">
        <item name="android:textSize">@dimen/text_game_set_scores</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">@dimen/small_vertical_margin</item>
    </style>

    <style name="GameSetTitles" parent="Titles">
        <item name="android:paddingBottom">@dimen/small_vertical_margin</item>
    </style>

    <style name="MyViewVertical" parent="AppTheme">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="MyViewVerticalSmall" parent="MyViewVertical">
        <item name="android:layout_marginLeft">@dimen/horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/horizontal_padding</item>
    </style>

    <style name="MyViewHorizontal" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
